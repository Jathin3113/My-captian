#include<stdio.h>
main()
{
printf("*********RESTAURANT*********\n");
printf("Pick an Item : \n 1. Pizza            Rs. 239\n 2. Burger           Rs. 129\n 3. Pasta            Rs. 179\n 4. French Fries     Rs. 99\n 5. Sandwich         Rs. 149\n");
int choice=0;
scanf("%d",&choice);
switch(choice)
{
case 1:
printf("You picked Pizza which would cost you Rs. 239");
break;
case 2:
printf("You picked Burger which would cost you Rs. 129");
break;
case 3:
printf("You picked French Fries which would cost you Rs. 99");
break;
case 4:
printf("You picked Pasta which would cost you Rs. 179");
break;
case 5:
printf("You picked Sandwich which would cost you Rs. 149");
break;
default : 
printf("Invalid Choice");
}
}
